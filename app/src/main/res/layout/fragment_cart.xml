<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartFragment">

    <!-- Toolbar Section -->
    <LinearLayout
        android:id="@+id/cart_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/cart_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/shipping_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shipping"
            android:contentDescription="Shipping Icon"/>
    </LinearLayout>
    <!-- Empty Cart Section -->
    <LinearLayout
        android:id="@+id/empty_cart_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/cart_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_cart"
            android:contentDescription="Empty Cart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your cart is empty"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Every item for every need"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <Button
            android:id="@+id/shop_by_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop by Category"
            android:padding="10dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
