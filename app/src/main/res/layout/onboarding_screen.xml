<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Lottie Animation in the Middle -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:scaleType="centerCrop"/>

    <!-- Main Header Text -->
    <TextView
        android:id="@+id/mainHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Our Products"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:layout_below="@id/lottieAnimationView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <!-- Subtext -->
    <TextView
        android:id="@+id/subtextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Exercise Books, Drawing Books, Office Supplies and More"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:layout_below="@id/mainHeaderTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

</RelativeLayout>